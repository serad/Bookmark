<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aplication.sergio.bookmark.fragments.SearchFragment"
    android:padding="5dp"
    android:background="@color/lightYellow"
    android:layout_marginBottom="?attr/actionBarSize">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookDetailActivity"
        tools:layout_editor_absoluteY="81dp"
        android:background="@color/lightYellow">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewer"
                android:layout_width="198dp"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="TitleExample"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewer" />

            <TextView
                android:id="@+id/authorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="AuthorExample"
                android:textColor="@color/green"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleContainer" />

            <TextView
                android:id="@+id/overViewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="OverViewExample"
                android:textColor="@color/green"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/authorContainer" />

            <ImageButton
                android:id="@+id/read_button"
                android:layout_width="55dp"
                android:layout_height="34dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:src="@drawable/ic_remove_red_eye_bown_48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/discard_button"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:src="@drawable/ic_content_cut_red_48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/overViewContainer" />

            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:src="@drawable/ic_favorite_green_48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/overViewContainer" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>